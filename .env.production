OW=3600
RATE_LIMIT_PER_IP=200
RATE_LIMIT_AUTH_REQUESTS=3
RATE_LIMIT_AUTH_WINDOW=900
RATE_LIMIT_VOTE_REQUESTS=5
RATE_LIMIT_VOTE_WINDOW=60

# SSL/TLS (Production)
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/election-system.crt
SSL_KEY_PATH=/etc/ssl/private/election-system.key

# Sessions (Production)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_EXPIRE_MINUTES=30

# Logging (Production)
LOG_LEVEL=WARNING
LOG_FILE=/var/log/election-system/election.log
LOG_ROTATION=1 day
LOG_RETENTION=90 days
LOG_MAX_SIZE=50 MB

# File Upload (Production)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/uploads/election-system
ALLOWED_FILE_TYPES=image/jpeg,image/png,text/csv

