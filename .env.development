ENVIRONMENT=development
DEBUG=true
TESTING=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# Security (Development - Less Strict)
SECRET_KEY=dev-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (Development)
DATABASE_URL=postgresql+asyncpg://election_user:election_pass@localhost:5432/election_dev_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=true

# Redis (Development)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# CORS (Development - Permissive)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://192.168.1.*,http://10.0.0.*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOW_CREDENTIALS=true

# Rate Limiting (Development - Lenient)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_AUTH_REQUESTS=10
RATE_LIMIT_AUTH_WINDOW=900
RATE_LIMIT_VOTE_REQUESTS=20
RATE_LIMIT_VOTE_WINDOW=60

# SSL/TLS (Development)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Sessions (Development)
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Logging (Development)
LOG_LEVEL=DEBUG
LOG_FILE=logs/election_dev.log
LOG_ROTATION=1 day
LOG_RETENTION=7 days

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/csv,application/vnd.ms-excel

# Election Settings
MAX_ELECTIONS_PER_UNIVERSITY=50
MAX_CANDIDATES_PER_ELECTION=100
MAX_VOTERS_PER_ELECTION=50000
VOTING_PIN_LENGTH=6
VOTING_PIN_EXPIRY_HOURS=48

# Features (Development)
AUDIT_LOG_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
BACKUP_ENABLED=false